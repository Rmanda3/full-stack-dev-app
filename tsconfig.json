{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "declaration": true,
    "removeComments": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": [
      "jest"
    ],
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "rootDir": "./src"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
